{# src/SiteWeb/ClientBundle/Resources/views/Advert/index.html.twig #}

{% extends "SiteWebClientBundle::layout.html.twig" %}

{% block title %}
  Accueil - {{ parent() }}
{% endblock %}

{% block SiteWebClientBundle_body %}

  {% for flashMessage in app.session.flashbag.get('notice') %}
    <div class="flash-notice">
        {{ flashMessage }}
    </div>
{% endfor %}

  <ul>
    {% for advert in listAdverts %}
      <li>
        <a href="{{ path('Siteweb_Client_view', {'id': advert.id}) }}">
          {{ advert.title }}
        </a>
        par {{ advert.author }},
        le {{ advert.date|date('d/m/Y') }}
      </li>
    {% else %}
      <li>Pas (encore !) d'annonces</li>
    {% endfor %}
  </ul>

{% endblock %}