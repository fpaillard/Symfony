{# src/SiteWeb/ClientBundle/Resources/views/Advert/delete.html.twig #}

{% extends "SiteWebClientBundle::layout.html.twig" %}

{% block title %}
  Supprimer une annonce - {{ parent() }}
{% endblock %}

{% block SiteWebClientBundle_body %}

  <h2>Etes-vous certain de vouloir supprimer l'annonce "{{ advert.title }}" ?</h2>


  {# On met l'id de l'annonce dans la route de l'action du formulaire #}
  <form action="{{ path('Siteweb_Client_delete', {'id': advert.id}) }}" method="post">
    
    <div class="row" >
  	<div class="form-group">
        <div class="col-sm-3 control-label">
        	Mot de passe
        </div>
        
        <div class="col-sm-4">
         <input type="password" name="pswd"  />
        </div>
     </div></div>

    <div class="row" >
    <a href="{{ path('Siteweb_Client_view', {'id': advert.id}) }}" class="btn btn-default">
      <i class="glyphicon glyphicon-chevron-left"></i>
      Retour à l'annonce
    </a>
    {# Ici j'ai écrit le bouton de soumission à la main #}
    <input type="submit" value="Supprimer" class="btn btn-danger" /></div>
    {# Ceci va générer le champ CSRF #}
    {{ form_rest(form) }}
  </form>
{% endblock %}